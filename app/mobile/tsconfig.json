{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "rootDir": "..",
    "baseUrl": "./",
    "outDir": "./dist",
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "target": "esnext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "paths": {
      "@shared/*": ["../shared/*"]
    }
  },
  "include": [
    "**/*.js",
    "**/*.ts",
    "**/*.tsx",
    "../shared/**/*.js",
    "../shared/**/*.ts",
    "../shared/**/*.tsx"
  ]
}
